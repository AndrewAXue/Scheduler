<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.scheduler.AddEventActivity">

    <EditText
        android:id="@+id/event_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="(optional)"
        android:inputType="textPersonName"
        android:text="goose"
        app:layout_constraintLeft_toRightOf="@+id/event_desc_text"
        app:layout_constraintTop_toBottomOf="@+id/event_location"
        android:layout_marginStart="16dp" />

    <CheckBox
        android:id="@+id/event_check_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/event_check_5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/event_check_5" />

    <CheckBox
        android:id="@+id/event_check_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/event_check_4"
        app:layout_constraintRight_toLeftOf="@+id/event_check_6"
        app:layout_constraintTop_toTopOf="@+id/event_check_4" />

    <CheckBox
        android:id="@+id/event_check_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/event_check_3"
        app:layout_constraintRight_toLeftOf="@+id/event_check_5"
        app:layout_constraintTop_toTopOf="@+id/event_check_3" />

    <EditText
        android:id="@+id/event_endtime_hour"
        android:layout_width="37dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="12"
        android:inputType="number"
        android:text="12"
        app:layout_constraintBaseline_toBaselineOf="@+id/event_endtime_text"
        app:layout_constraintLeft_toRightOf="@+id/event_endtime_text" />

    <EditText
        android:id="@+id/event_endtime_min"
        android:layout_width="37dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginStart="1dp"
        android:ems="10"
        android:hint="00"
        android:inputType="number"
        android:text="00"
        app:layout_constraintBaseline_toBaselineOf="@+id/event_endtime_text"
        app:layout_constraintLeft_toRightOf="@+id/textView12" />

    <EditText
        android:id="@+id/event_starttime_min"
        android:layout_width="37dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:ems="10"
        android:hint="00"
        android:inputType="number"
        android:text="00"
        app:layout_constraintBaseline_toBaselineOf="@+id/event_starttime_hour"
        app:layout_constraintLeft_toRightOf="@+id/textView3"
        android:layout_marginStart="1dp" />

    <TextView
        android:id="@+id/add_event_title"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:text="Add new event"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/event_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Name of activity"
        android:inputType="textPersonName"
        android:text="pls"
        app:layout_constraintLeft_toLeftOf="@+id/event_desc"
        app:layout_constraintTop_toBottomOf="@+id/add_event_title" />

    <EditText
        android:id="@+id/event_starttime_hour"
        android:layout_width="37dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="12"
        android:inputType="number"
        android:text="12"
        app:layout_constraintBaseline_toBaselineOf="@+id/event_starttime_text"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/event_starttime_text"
        app:layout_constraintRight_toLeftOf="@+id/event_starttime_min" />

    <TextView
        android:id="@+id/event_starttime_text"
        android:layout_width="112dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        android:text="Start Time"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/event_name" />

    <TextView
        android:id="@+id/event_endtime_text"
        android:layout_width="112dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="End Time"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/event_starttime_text" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="7dp"
        android:layout_height="18dp"
        android:text=":"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toRightOf="@+id/event_starttime_hour"
        app:layout_constraintBaseline_toBaselineOf="@+id/event_starttime_hour" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="7dp"
        android:layout_height="18dp"
        android:text=":"
        android:textColor="@android:color/black"
        app:layout_constraintBaseline_toBaselineOf="@+id/event_endtime_hour"
        app:layout_constraintLeft_toRightOf="@+id/event_endtime_hour" />

    <CheckBox
        android:id="@+id/event_check_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/event_check_2"
        app:layout_constraintRight_toLeftOf="@+id/event_check_4"
        app:layout_constraintTop_toTopOf="@+id/event_check_2" />

    <CheckBox
        android:id="@+id/event_check_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/event_check_0"
        app:layout_constraintRight_toLeftOf="@+id/event_check_2"
        app:layout_constraintTop_toTopOf="@+id/event_check_0" />

    <CheckBox
        android:id="@+id/event_check_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/event_check_1"
        app:layout_constraintRight_toLeftOf="@+id/event_check_3"
        app:layout_constraintTop_toTopOf="@+id/event_check_1" />

    <CheckBox
        android:id="@+id/event_check_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/event_check_1"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/event_endtime_text" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Mon"
        android:textColor="@android:color/black"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintLeft_toLeftOf="@+id/event_check_0"
        app:layout_constraintRight_toRightOf="@+id/event_check_0"
        app:layout_constraintTop_toBottomOf="@+id/event_check_0" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Tues"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toLeftOf="@+id/event_check_1"
        app:layout_constraintRight_toRightOf="@+id/event_check_1"
        app:layout_constraintTop_toTopOf="@+id/textView13" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Wed"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toLeftOf="@+id/event_check_2"
        app:layout_constraintRight_toRightOf="@+id/event_check_2"
        app:layout_constraintTop_toTopOf="@+id/textView14" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Thurs"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toLeftOf="@+id/event_check_3"
        app:layout_constraintRight_toRightOf="@+id/event_check_3"
        app:layout_constraintTop_toTopOf="@+id/textView15" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Fri"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toLeftOf="@+id/event_check_4"
        app:layout_constraintRight_toRightOf="@+id/event_check_4"
        app:layout_constraintTop_toTopOf="@+id/textView19" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sat"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toLeftOf="@+id/event_check_5"
        app:layout_constraintRight_toRightOf="@+id/event_check_5"
        app:layout_constraintTop_toTopOf="@+id/textView17" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Sun"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toLeftOf="@+id/event_check_6"
        app:layout_constraintRight_toRightOf="@+id/event_check_6"
        app:layout_constraintTop_toTopOf="@+id/textView18" />

    <TextView
        android:id="@+id/event_location_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="Location"
        android:textColor="@android:color/black"
        app:layout_constraintBaseline_toBaselineOf="@+id/event_location"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/event_desc_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="Description"
        android:textColor="@android:color/black"
        app:layout_constraintBaseline_toBaselineOf="@+id/event_desc"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp" />

    <EditText
        android:id="@+id/event_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="(optional)"
        android:inputType="textPersonName"
        android:text="work"
        app:layout_constraintLeft_toLeftOf="@+id/event_desc"
        app:layout_constraintTop_toBottomOf="@+id/textView19" />

    <TextView
        android:id="@+id/event_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="TextView"
        android:textColor="@android:color/black"
        app:layout_constraintBaseline_toBaselineOf="@+id/event_name"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp" />

    <Button
        android:id="@+id/event_add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Event"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/event_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/event_add_button" />

    <AutoCompleteTextView
        android:id="@+id/event_endtime_am"
        android:layout_width="37dp"
        android:layout_height="wrap_content"
        android:dropDownWidth="53dp"
        android:hint="am"
        android:text="am"
        app:layout_constraintBaseline_toBaselineOf="@+id/event_endtime_min"
        app:layout_constraintLeft_toRightOf="@+id/event_endtime_min" />

    <AutoCompleteTextView
        android:id="@+id/event_starttime_am"
        android:layout_width="37dp"
        android:layout_height="wrap_content"
        android:dropDownWidth="53dp"
        android:hint="am"
        android:text="am"
        app:layout_constraintBaseline_toBaselineOf="@+id/event_starttime_min"
        app:layout_constraintLeft_toRightOf="@+id/event_starttime_min" />

    <CheckBox
        android:id="@+id/event_weekly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="Weekly"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/event_one_time"
        app:layout_constraintTop_toTopOf="@+id/event_one_time" />

    <CheckBox
        android:id="@+id/event_one_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="One Time"
        app:layout_constraintLeft_toRightOf="@+id/event_weekly"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/event_desc" />

</android.support.constraint.ConstraintLayout>
